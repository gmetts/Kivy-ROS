#:kivy 1.0.9

<Timer>:
    canvas:
        Color:
            rgba: 176 / 255., 27 / 255., 27 / 255., 1
        Rectangle:
            pos: root.pos
            size: root.size

    Label:
        center_x: root.width / 2
        top: root.top - 10
        text: "Timer Layout"
        size: 5,10

    BoxLayout:
        orientation: 'vertical'

        size: root.width, root.height - 20
        padding: 10, 10, 10, 10





        BoxLayout:
            orientation: 'vertical'
            Label:
                id: TimerLabel
                text: "No time recieved"

            Button:
                id: button2
                text: "Reset Timer"
                on_release: root.do_action()

    
