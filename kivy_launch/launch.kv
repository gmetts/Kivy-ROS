#:kivy 1.0.9

<LaunchSelector>:
    canvas:
        Color:
            rgba: 176 / 255., 27 / 255., 27 / 255., 1
        Rectangle:
            pos: root.pos
            size: root.size

    Label:
        center_x: root.width / 2
        top: root.top - 10
        text: "Please select the launch configuration desired"
        size: 5,10

    BoxLayout:
        orientation: 'vertical'

        size: root.width, root.height - 20
        padding: 10, 10, 10, 10





        BoxLayout:
            orientation: 'vertical'
            Button:
                id: button1
                text: "Timer"
                on_release: root.launch_timer()

            Button:
                id: button2
                text: "Keyboard"
                on_release: root.launch_keyboard()

    
